<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/achievement_background"
    android:padding="8dp"
    android:layout_marginBottom="3dp">

    <TextView
        android:id="@+id/achievementIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ‰"
        android:textSize="16sp"
        android:layout_marginEnd="8dp"
        android:gravity="center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/achievementName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Achievement Name"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="@color/primary_brown"
            android:layout_marginBottom="1dp" />

        <TextView
            android:id="@+id/achievementDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Achievement description"
            android:textSize="9sp"
            android:textColor="@color/text_secondary" />
    </LinearLayout>
</LinearLayout>
