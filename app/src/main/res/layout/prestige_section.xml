<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/prestige_background"
    android:padding="20dp"
    android:layout_marginBottom="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prestige_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/prestige_text"
        android:gravity="center"
        android:layout_marginBottom="15dp" />

    <!-- Stats Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="12dp">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp">

            <TextView
                android:id="@+id/prestigeLevelDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nivel de Prestigio: 0"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/prestigePointsDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Puntos de Prestigio: 0"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_white" />
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/prestigeBonusDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bonus Actual: +0%"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_white" />

            <TextView
                android:id="@+id/prestigeNextPoints"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PrÃ³ximos Puntos: 0"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/text_white" />
        </LinearLayout>
    </LinearLayout>

    <!-- Prestige Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/prestigeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prestige_button"
            android:background="@drawable/prestige_button_background"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prestige_requirement"
            android:textSize="9sp"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:alpha="0.8" />
    </LinearLayout>
</LinearLayout>
