<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/save_system_background"
    android:padding="20dp"
    android:layout_marginBottom="25dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_system_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/save_text"
        android:gravity="center"
        android:layout_marginBottom="15dp" />

    <!-- Export Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/save_panel_background"
        android:padding="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/export_title"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/exportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/export_button"
            android:background="@drawable/export_button_background"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/exportCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/export_hint"
            android:background="@drawable/save_code_background"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_secondary"
            android:fontFamily="monospace"
            android:textSize="9sp"
            android:padding="6dp"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:focusable="false"
            android:clickable="true" />
    </LinearLayout>

    <!-- Import Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/save_panel_background"
        android:padding="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/import_title"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/text_white"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/importButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/import_button"
            android:background="@drawable/import_button_background"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/importCode"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/import_hint"
            android:background="@drawable/save_code_background"
            android:textColor="@color/text_white"
            android:textColorHint="@color/text_secondary"
            android:fontFamily="monospace"
            android:textSize="9sp"
            android:padding="6dp"
            android:gravity="top"
            android:inputType="textMultiLine" />
    </LinearLayout>
</LinearLayout>
