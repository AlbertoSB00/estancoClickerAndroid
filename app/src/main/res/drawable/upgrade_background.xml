<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when affordable -->
    <item android:state_selected="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="145"
                android:startColor="@color/upgrade_affordable_start"
                android:endColor="@color/upgrade_affordable_end" />
            <corners android:radius="15dp" />
            <stroke
                android:width="2dp"
                android:color="@color/upgrade_affordable_border" />
        </shape>
    </item>
    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="145"
                android:startColor="@color/upgrade_normal_end"
                android:endColor="@color/upgrade_normal_start" />
            <corners android:radius="15dp" />
            <stroke
                android:width="2dp"
                android:color="@color/upgrade_normal_border" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="145"
                android:startColor="@color/upgrade_normal_start"
                android:endColor="@color/upgrade_normal_end" />
            <corners android:radius="15dp" />
            <stroke
                android:width="2dp"
                android:color="@color/upgrade_normal_border" />
        </shape>
    </item>
</selector>
