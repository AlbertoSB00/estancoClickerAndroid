<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1A8B4513"
                android:endColor="#1AA0522D" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="@color/primary_brown" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#0D8B4513"
                android:endColor="#0DA0522D" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primary_brown" />
        </shape>
    </item>
</selector>
