<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when pressed -->
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#1A4A90E2"
                android:endColor="#1A2E5BDA" />
            <corners android:radius="8dp" />
            <stroke
                android:width="2dp"
                android:color="#4A90E2" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#0D4A90E2"
                android:endColor="#0D2E5BDA" />
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#4A90E2" />
        </shape>
    </item>
</selector>
